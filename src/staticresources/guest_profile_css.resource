.container {
position: relative;
clear: both;
width: 95%;
margin: 0 auto 10px auto;
overflow: hidden;
font-family: 'Cuprum';
font-size: 1.0em;
}

#base_info_container {
}

#survey_data_container {
}

.spacer {
width: 3%
}

#comment_container {
}

#button_container {
text-align: center;
}

.block {
position: relative;
float: left;
-webkit-box-sizing: border-box;
-moz-box-sizing: border-box;
box-sizing: border-box;
}

.block_header {
border-bottom: solid 1px #000000;
font-weight: bold;
font-size: 14pt;
text-align: left;
}

#photo_block {
width: 50%;
height: 180px;
}

#communication_bar {
position: absolute;
width: 100%;
bottom: 60px;
padding: 5px 10px;
color: #333333;
text-align:right;
-webkit-box-sizing: border-box;
-moz-box-sizing: border-box;
box-sizing: border-box;
}

#profile_bar {
position: absolute;
bottom: 0;
height: 50px;
width: 50%;
color: #ffffff;
text-align: left;
padding: 5px 10px;
-webkit-box-sizing: border-box;
-moz-box-sizing: border-box;
box-sizing: border-box;
}

#name_bar {
position: absolute;
bottom: 0;
height: 55px;
width: 100%;
color: #ffffff;
text-align: right;
padding: 5px 10px;
-webkit-box-sizing: border-box;
-moz-box-sizing: border-box;
box-sizing: border-box;

background: url(data:image/svg+xml;base64,);
background: -moz-linear-gradient(left,  rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.7) 100%);
background: -webkit-gradient(linear, left top, right top, color-stop(0%,rgba(0,0,0,0.5)), color-stop(100%,rgba(0,0,0,0.7)));
background: -webkit-linear-gradient(left,  rgba(0,0,0,0.5) 0%,rgba(0,0,0,0.7) 100%);
background: -o-linear-gradient(left,  rgba(0,0,0,0.5) 0%,rgba(0,0,0,0.7) 100%);
background: -ms-linear-gradient(left,  rgba(0,0,0,0.5) 0%,rgba(0,0,0,0.7) 100%);
background: linear-gradient(to right,  rgba(0,0,0,0.5) 0%,rgba(0,0,0,0.7) 100%);
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#80000000', endColorstr='#b3000000',GradientType=1 );
}

#name_bar a {
color: #ffffff;
font-size: 0.9em;
}

#rate_block {
width: 25%;
}

#survey_block {
width: 72%;
}

#survey_block .survey_row {
position: relative;
margin: 10px 0px 20px 0px;
}

#survey_block .question_row {
position:relative;
font-size: 13pt;
font-weight: bold;
color: #555555;
}

#survey_block .answer_row {
position:relative;
font-size: 12pt;
color: #444444;
}

#survey_block .spacer {
width: 2%;
}

.comment_row {
font-size: 12pt;
clear: both;
width: 100%;
border-bottom: solid 1px #F4E2ED;
overflow: hidden;
}

#twitter_tab .date_column {
position: relative;
float: left;
padding: 8px 0px;
width: 12%;
}

#twitter_tab .text_column {
position: relative;
float: left;
padding: 8px 0px;
width: 86%;
}

#twitter_tab .spacer {
position: relative;
float: left;
width: 2%;
}
